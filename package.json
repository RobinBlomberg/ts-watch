{
  "name": "@robinblomberg/ts-watch",
  "version": "0.1.0",
  "author": "Robin Blomberg",
  "type": "module",
  "main": "src/index.js",
  "types": "types.d.ts",
  "devDependencies": {
    "@robinblomberg/ansi": "^0.5.1",
    "@robinblomberg/eslint-config-robinblomberg": "^0.2.20",
    "@types/node": "^14.14.10",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "check": "tsc",
    "dev": "nodemon --watch . --exec \"concurrently \\\"node ./test/index.test.js\\\" tsc \\\"eslint **/*.{js,ts}\\\"\"",
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "eslint \"**/*.{js,ts}\" --fix",
    "test": "node ./test/index.test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check && npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "cross-env CI=true eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobinBlomberg/ts-watch.git"
  },
  "bugs": {
    "url": "https://github.com/RobinBlomberg/ts-watch/issues"
  },
  "homepage": "https://github.com/RobinBlomberg/ts-watch"
}
